{
  "name": "knowledge-base-crawler",
  "version": "0.1.0",
  "description": "A tool that enables an organization to crawl their knowledge base from different sources and store the data in a vector database",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*",
    "packages/integration-tests/*"
  ],
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:integration": "pnpm --filter integration-tests test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "knowledge-base",
    "crawler",
    "vector-database"
  ],
  "author": "Mattia Minotti",
  "license": "MIT"
}