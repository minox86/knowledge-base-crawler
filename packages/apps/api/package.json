    "@knowledge-crawler/types": "workspace:*",
    "@knowledge-crawler/utils": "workspace:*",
    "fastify": "^4.25.2",
    "fastify-type-provider-zod": "2.0.0",
    "fastify-zod": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
