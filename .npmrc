# Enable pnpm workspaces strict mode
strict-peer-dependencies=true

# Hoist pattern to avoid duplication
hoist-pattern[]=*eslint*
hoist-pattern[]=*prettier*
hoist-pattern[]=*typescript*

# Auto install peers
auto-install-peers=true

# Registry settings
registry=https://registry.npmjs.org/

# Save exact versions
save-exact=true

# Engine strict mode
engine-strict=true

# Prevent publishing of private packages
publish=false